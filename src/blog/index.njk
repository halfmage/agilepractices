---
layout: default
---

<div class="container mx-auto px-4">
  <div class="py-8">
    <h1 class="max-w-screen-lg mx-auto font-black text-primary-400">Blog</h1>
    <p class="my-8 text-lg text-center">
      Everything you need to know about the agility of the IT domain.
    </p>
  </div>
</div>
<div class="container mx-auto grid grid-cols-4 gap-4">
  <section class="col-span-3">
    {% set postslist = collections.post %} {% for post in postslist %}
    <article class="p-8 flex border-b border-gray-800">
      {% if post.data.thumbnail %}
      <img
        class="w-32 h-32 mr-8"
        src="{{ post.data.thumbnail }}"
        alt="{{ post.data.title }} - Thumbnail"
      />
      {% else %} No Image {% endif %}
      <div>
        <h2 class="font-bold text-3xl text-gray-100 mb-2">
          <a href="{{ post.url | url }}">
            {% if post.data.title %} {{ post.data.title }} {% else %} Untitled
            {% endif %}
          </a>
        </h2>
        <p class="text-base leading-6 text-gray-300 mb-3">
          <time>
            {{ post.date | readableDate }} by
            <a>{{ post.data.author }}</a>
          </time>
        </p>
        <p>
          {% for tag in post.data.tags %} {%- if tag != "post" -%} {% set tagUrl
          %}/tags/{{ tag }}/{% endset %}
          <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
          {%- endif -%} {% endfor %}
        </p>
        {% if post.data.description %}
        <p class="text-gray-300 mb-3">{{ post.data.description }}</p>
        {% endif %}

        <p>
          <a
            href="{{ post.url | url }}"
            class="text-primary-400 font-bold text-lg"
          >
            Read more â†’
          </a>
        </p>
      </div>
    </article>
    {% endfor %}
  </section>
  <aside>Sidebar</aside>
</div>
